<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.notification.test.computation.config">

  <extension target="org.nuxeo.ecm.platform.notification.NotificationComponent" point="notifier">
    <notifier id="inApp" class="org.nuxeo.ecm.platform.notification.notifier.CounterNotifier" />
    <notifier id="log" class="org.nuxeo.ecm.platform.notification.notifier.CounterNotifier" />
  </extension>

  <extension target="org.nuxeo.ecm.platform.notification.NotificationComponent" point="resolver">
    <resolver id="basicEvent" class="org.nuxeo.ecm.notification.resolver.BasicResolver" />
  </extension>

  <extension target="org.nuxeo.ecm.platform.notification.NotificationComponent" point="settings">
    <settings id="basicEvent">
      <notifier name="inApp" default="true" />
      <notifier name="log" default="false" />
    </settings>
  </extension>
</component>